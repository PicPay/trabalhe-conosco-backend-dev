<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app>             
	<display-name>Desafio PicPay</display-name>
	<context-param>
	   <param-name>relevance-list-1</param-name>
	   <param-value>C:\Users\TEMP\lista_relevancia_1.txt</param-value>
	</context-param>
	<context-param>
		<param-name>relevance-list-2</param-name>
		<param-value>C:\Users\TEMP\lista_relevancia_2.txt</param-value>
	</context-param>
	<context-param>
		<param-name>users-list</param-name>
		<param-value>C:\Users\TEMP\users.csv</param-value>
	</context-param>
	<listener>
    	<listener-class>com.picpay.ApplicationStart</listener-class>
  	</listener>
  	
 	<servlet>
		<servlet-name>jersey-serlvet</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>jersey.config.server.provider.packages</param-name>
			<param-value>com.picpay</param-value>
		</init-param>
		<init-param>
			<param-name></param-name>
			<param-value></param-value>
     	</init-param>
		
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>jersey-serlvet</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>

</web-app>
